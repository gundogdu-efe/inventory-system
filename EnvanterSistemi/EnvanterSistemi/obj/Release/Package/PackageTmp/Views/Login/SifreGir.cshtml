
@{
    ViewBag.Title = "SifreGir";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Mazer Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/css/app.css">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/css/pages/auth.css">
</head>

<body>
    <div id="auth">

        <div class="row h-100">
            <div class="col-lg-12 col-12">
                <div id="auth-left">
                    @*<div class="auth-logo">
                            <a href="index.html"><img src="~/Temalar/mazer-main/dist/assets/images/logo/logo.png" alt="Logo"></a>
                        </div>*@
                    <h1 class="auth-title text-black">Kullanıcı Kayıt Formu</h1>

                    @using (Html.BeginForm("SifreGir", "Login", FormMethod.Post))
                    {
                        <form action="index.html">
                            <div class="form-group">
                                @Html.TextBox("email", @TempData["email"], new { style = "display: none;" })
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="password" class="form-control form-control-xl" name="password" placeholder="Password">
                                <div class="form-control-icon">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                            </div>
                            <div class="form-group position-relative has-icon-left mb-4">
                                <input type="password" class="form-control form-control-xl" name="confirmpassword" placeholder="Confirm Password">
                                <div class="form-control-icon">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-block btn-lg shadow-lg bg-black mt-5">Şifre Değiştir</button>
                        </form>
                    }
                    <div class="container" style="background-color:darkgoldenrod;">
                        <p>
                            @ViewBag.mesaj
                        </p>
                    </div>
                </div>
            </div>
            @*<div class="col-lg-7 d-none d-lg-block">
                    <div id="auth-right">

                    </div>
                </div>*@
        </div>

    </div>
</body>

</html>

