
@{
    ViewBag.Title = "Index";
    
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Mazer Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/css/app.css">
    <link rel="stylesheet" href="~/Temalar/mazer-main/dist/assets/css/pages/auth.css">
</head>

<body>
    <div id="auth">

        <div>
            <div class="col-lg-10 col-10">
                <div id="auth-left">
                    <div class="auth-logo">
                        <a href="index.html"><img src="~/Temalar/mazer-main/dist/assets/images/logo/yenilogo.png"alt="Logo"></a>
                        
                    </div>
                    <h1 class="auth-title text-black" >Giriş Yap. </h1>
                    <p class="auth-subtitle mb-5">Kullanıcı adı ve şifrenizi giriniz.</p>
                    @using (Html.BeginForm("Index","Login",FormMethod.Post))
                    {
                    <form action="index.html">
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="text" class="form-control form-control-xl" name="username" placeholder="Kullanıcı Adı">
                            <div class="form-control-icon">
                                <i class="bi bi-person"></i>
                            </div>
                        </div>
                        <div class="form-group position-relative has-icon-left mb-4">
                            <input type="password" class="form-control form-control-xl" name="password" placeholder="Şifre">
                            <div class="form-control-icon">
                                <i class="bi bi-shield-lock"></i>
                            </div>
                        </div>
                        <div class="form-check form-check-lg d-flex align-items-end">
                            <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label text-gray-600" for="flexCheckDefault">
                                Beni hatırla
                            </label>
                        </div>
                        <button class="btn btn-primary btn-block btn-lg bg-black mt-5">Giriş Yap</button>
                        <br />
                        <br />
                        <br />
                        <div class="container" style="background-color:darkblue;">
                                <p>
                                    @ViewBag.mesaj
                                </p>
                        </div>

                    </form>
                    }
                    <div class="text-center mt-5 text-lg fs-4">
                        <p class="text-gray-600">
                            Hesabın yok mu? <a href="/Login/KayitOl/"
                                                      class="font-bold text-black">
                                Kayıt Ol
                                
                            </a>.
                        </p>
                        <p><a class="font-bold text-black" href="/Login/SifremiUnuttum/">Şifremi Unuttum</a>.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 d-none d-lg-block">
                <div id="auth-right">

                </div>
            </div>
        </div>

    </div>
</body>

</html>
